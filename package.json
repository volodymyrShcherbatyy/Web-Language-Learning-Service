{
  "name": "web-language-learning-service",
  "version": "1.0.0",
  "description": "Web language learning service backend",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node app.js",
    "dev": "node --watch app.js",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest --config jest.config.js",
    "test:frontend": "npm --prefix frontend test",
    "build:frontend": "npm --prefix frontend run build",
    "migrate:prod": "psql \"postgresql://$DB_USER:$DB_PASSWORD@$DB_HOST:${DB_PORT:-5432}/$DB_NAME\" -f sql/schema.sql && psql \"postgresql://$DB_USER:$DB_PASSWORD@$DB_HOST:${DB_PORT:-5432}/$DB_NAME\" -f migrations/001_learning_system.sql",
    "start:pm2": "pm2 start deploy/pm2/ecosystem.config.cjs"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  }
}
